<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".components.home.HomeFragment" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="Ảnh giới thiệu"
                android:scaleType="fitStart"
                android:src="@drawable/salt_water_pool_04_copy_2_1500"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/rectangleView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="-35dp"
                android:background="@drawable/rectangle_shape"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageView2"
                app:layout_constraintVertical_bias="1.0" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/rectangleView">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Chào mừng đến với La Siesta Hội An Resort &amp; Spa"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Một không gian nhỏ ẩn mình cạnh bên phố cổ."
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Chỉ cách trung tâm phố cổ Hội An 10 phút đi bộ hoặc 45 phút đi bằng xe ô tô từ Sân Bay Quốc Tế Đà Nẵng, hiếm có nơi nào còn giữ được vẻ đẹp tự nhiên như La Siesta Hoi An Resort &amp; Spa. Ẩn mình trong khu vườn nhiệt đới ngập tràn sắc xanh, bên khung cảnh nên thơ của cánh đồng hiền hoà, khu nghỉ dưỡng như một nơi ẩn náu lý tưởng giúp du khách rời xa mọi bộn bề của cuộc sống, để tìm về không gian riêng tư tuyệt đối và cảm nhận sự bình yên lắng đọng trong tâm hồn."
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Sự kết hợp hài hoà giữa lối kiến trúc hiện đại và vẻ đẹp truyền thống Việt Nam, cùng nét chấm phá bay bổng mang đến sự tinh tế trong từng đường nét thiết kế cho 137 căn phòng. Kiến trúc xanh kết hợp với nội thất hiện đại bằng gỗ tếch sẫm màu được làm thủ công, sàn gỗ đánh bóng, gạch khảm hoa văn và các vật liệu xây dựng địa phương mang đến một trải nghiệm nghỉ dưỡng đẳng cấp giữa thiên nhiên."
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>